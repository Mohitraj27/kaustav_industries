<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Collect_My_Waste">


    <androidx.cardview.widget.CardView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="241dp"
        android:layout_marginBottom="450dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/whatsapp_image_2022_01_23_at_7_42_50_pm" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/metallic_waste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="Metallic Waste"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="230dp"
            android:layout_marginBottom="450dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="11dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/whatsapp_image_2022_01_23_at_7_42_49_pm" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/electronic_waste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#50c878"
                    android:gravity="center"
                    android:text="Electronic Waste"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="140dp"
        android:src="@drawable/whatsapp_image_2022_01_23_at_7_42_50_pm">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="225dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/paper_waste_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="#50c878"
                android:gravity="center"
                android:text="Paper Waste"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>





</RelativeLayout>
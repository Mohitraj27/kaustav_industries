<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

android:background="@drawable/whatsapp_image_2022_01_15_at_11_54_55_pm"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp">


    <TextView

        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Welcome"
        android:textColor="#50c878"
        android:textSize="25sp" />

    <TextView

        android:id="@+id/text_view_user_full_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="-34dp"
        android:textColor="#50c878"
        android:textSize="25sp"
        tools:text="Mr Fullname User" />

    <TextView

        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:id="@+id/text_view_email_address"
        tools:text="email@address.com"
        android:textColor="#50c878"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:layout_marginTop="15dp"
        android:textSize="25sp"
         android:id="@+id/text_view_phone"
        tools:text="Username"
        android:textColor="#50c878"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





</LinearLayout>